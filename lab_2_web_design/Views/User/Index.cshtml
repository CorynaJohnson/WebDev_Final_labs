@model IEnumerable<lab_2_web_design.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="well">Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-lg btn-default" })
</p>

    <table id="usertable" class="table table-striped table-hover table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAdress)
            </th>
            <th>
                Has Yarn?
            </th>
            <th>
                Edit|Details|Delete
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {

            <tr class="tablerow @(@item.hasYarn ? "success" : "")">
                @*<tr style='background-color: @(@item.hasYarn ? "green" : "pink")'>*@
                <td class="namecolumn">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAdress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hasYarn)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |*@
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, htmlAttributes: new { @class = "btn btn-sm btn-default" })
                    @*@Html.ActionLink("Details", "Details", new { id = item.UserId }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.UserId }, htmlAttributes: new { @class = "btn btn-sm btn-default" })
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.UserId })*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId }, htmlAttributes: new { @class = "btn btn-sm btn-default" })
                </td>
            </tr>
        }
    </table>


<p>
    <button type="button" id="buttonshow" class="btn btn-default">Show Table</button>
    <button type="button" id="buttonhide" class="btn btn-default">Hide Table</button>
</p>
<div id="saysomething"></div>

@section scripts {
    <script>
        //alert("Hello");
        //$(document).ready(function () {           
        //    $("th").click(function () {
        //        $(this).hide();
        //    });
        //});
        $(document).ready(function () {           
        $("#buttonhide").click(function () {
            $("#usertable").hide();
        });
        });
        
        $(document).ready(function () {
        $("#buttonshow").click(function () {
            $("#usertable").show();
        });
        });

        $(document).ready(function(){
            $(".tablerow").click(function(){
                var value = $(this).find('.namecolumn').text().trim();
                //saysomething.text(value);
                $("#saysomething").text(value);
            });
        });
        
    </script>
}
